{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "bedrock:InvokeModel",
            ],
            "Resource": "arn:aws:bedrock:us-east-1::foundation-model/your-model-id"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::your-bucket-name",
                "arn:aws:s3:::your-bucket-name/*"
            ]
        },
        {
          "Effect": "Allow",
          "Action": [
            "bedrock:RetrieveAndGenerate",
            "bedrock:ListFoundationModels"
          ],
          "Resource" : "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": "arn:aws:logs:us-west-2:123456789012:log-group:/aws/lambda/your-function-name:*"
        }
    ]
}
